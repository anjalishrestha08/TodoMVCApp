@model TodoMVCApp.Models.TodoItem

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-danger mb-4">
    <i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete
</h1>

<div class="card border-danger shadow-sm rounded-3 w-75 mx-auto">
    <div class="card-body">
        <h4 class="card-title text-danger">Are you sure you want to delete this task?</h4>
        <hr />
        <dl class="row mb-4">
            <dt class="col-sm-3 fw-bold text-secondary">Title</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Description</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Due Date</dt>
            <dd class="col-sm-9">@Model.DueDate.ToString("g")</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Status</dt>
            <dd class="col-sm-9">
                @if (Model.IsDone)
                {
                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Done</span>
                }
                else if (Model.InProcess)
                {
                    <span class="badge bg-info text-dark"><i class="bi bi-hourglass-split"></i> In Process</span>
                }
                else
                {
                    <span class="badge bg-secondary"><i class="bi bi-hourglass"></i> Not Started</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>
