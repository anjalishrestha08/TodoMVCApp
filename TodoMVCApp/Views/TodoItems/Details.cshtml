@model TodoMVCApp.Models.TodoItem

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-primary mb-4">
    <i class="bi bi-info-circle"></i> Task Details
</h1>

<div class="card shadow-sm rounded-3 w-75 mx-auto">
    <div class="card-body">
        <h4 class="card-title text-dark">@Model.Title</h4>
        <hr />

        <dl class="row mb-3">
            <!-- Description -->
            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <!-- Due Date -->
            <dt class="col-sm-3 fw-bold text-secondary">
                @Html.DisplayNameFor(model => model.DueDate)
            </dt>
            <dd class="col-sm-9">
                @Model.DueDate.ToString("g")
            </dd>

            <!-- In Process -->
            <dt class="col-sm-3 fw-bold text-secondary">
                Status
            </dt>
            <dd class="col-sm-9">
                @if (Model.IsDone)
                {
                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Done</span>
                }
                else if (Model.InProcess)
                {
                    <span class="badge bg-info text-dark"><i class="bi bi-hourglass-split"></i> In Process</span>
                }
                else
                {
                    <span class="badge bg-secondary"><i class="bi bi-hourglass"></i> Not Started</span>
                }
            </dd>
        </dl>

        <div class="d-flex gap-3">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
